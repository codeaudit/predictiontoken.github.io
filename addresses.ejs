<a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i> <%= addresses[selectedAccount].addr.substring(0,12) %>... <span class="badge"><%= bundle.utility.weiToEth(addresses[selectedAccount].balance) %> ETH</span> <span class="caret"></span></a>
<ul class="dropdown-menu">
  <% addresses.forEach(function(address, i, array) { %>
    <li><a href="javascript:;" onclick="bundle.Main.selectAccount(<%= i%>);"><%= address.addr %> <span class="badge"><%= bundle.utility.weiToEth(address.balance) %> ETH</span></a></li>
  <% }); %>
  <li role="separator" class="divider"></li>
  <li><a href="javascript:;" onclick="bundle.Main.createAccount()">New account</a></li>
  <li><a href="javascript:;" data-toggle="modal" data-target="#address_modal">Import account</a></li>
  <li><a href="javascript:;" onclick="bundle.Main.showPrivateKey()">Export private key</a></li>
  <li><a href="javascript:;" onclick="bundle.Main.deleteAccount()">Forget account</a></li>
  <li><a href="javascript:;" onclick="bundle.Main.logout()">Forget all accounts</a></li>
</ul>
